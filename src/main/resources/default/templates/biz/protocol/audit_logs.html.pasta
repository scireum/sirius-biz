<i:arg type="Page" name="messages"/>
<t:page titleKey="AuditLogEntry.plural">
    <i:block name="breadcrumbs">
        <li><a href="/audit-log">@i18n("AuditLogEntry.plural")</a></li>
    </i:block>

    <i:block name="page-header">
        <t:pageHeader titleKey="AuditLogEntry.plural"/>
    </i:block>

    <t:sidebar>
        <i:block name="sidebar">
            <t:filterbox page="messages" baseUrl="/audit-log"/>
        </i:block>

        <t:searchHeader page="messages" baseUrl="/audit-log"/>

        <t:emptyCheck data="messages">
            <div class="card mb-4">
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div>@i18n("AuditLogEntry.timestamp")</div>
                                        <div>@i18n("AuditLogEntry.causedBy")</div>
                                    </div>
                                    <div class="col-md-4">
                                        <div>@i18n("AuditLogEntry.user")</div>
                                        <div>@i18n("AuditLogEntry.tenant")</div>
                                    </div>
                                    <div class="col-md-2">@i18n("AuditLogEntry.ip")</div>
                                </div>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        <i:for type="sirius.biz.protocol.AuditLogEntry" var="msg" items="messages.getItems()">
                            <tr>
                                <td class="left-border @if (msg.isNegative()) { border-sirius-yellow } else { border-sirius-blue }">
                                    <div class="row">
                                        <div class="col-md-4 text-small text-muted">
                                            <div>@toUserString(msg.getTimestamp())</div>
                                            <div>@msg.getCausedByUserName()</div>
                                        </div>
                                        <div class="col-md-4 text-small text-muted">
                                            <div>@msg.getUserName()</div>
                                            <div>@msg.getTenantName()</div>
                                        </div>
                                        <div class="col-md-4 text-small text-muted">@msg.getIp()</div>
                                    </div>
                                    <pre class="pt-2 mb-0" style="white-space: break-spaces">@i18n(msg.getMessage())</pre>
                                </td>
                            </tr>
                        </i:for>

                        </tbody>
                    </table>
                </div>
            </div>
            <t:pagination page="messages" baseUrl="/audit-log"/>
        </t:emptyCheck>
    </t:sidebar>
</t:page>

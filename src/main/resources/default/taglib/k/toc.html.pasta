<i:arg type="String" name="headingKey" default="KnowledgeBaseArticle.toc_heading" description="May contain a i18n key." />
<i:arg type="String" name="heading" default="@i18n(headingKey)" description="May contain a heading of this section."/>

<i:pragma name="description">
    Renders a table of content uniformly.
</i:pragma>

<k:section heading="@heading" anchor="toc">
    <ul class="mt-3">
        <i:render name="body"/>
    </ul>
</k:section>
